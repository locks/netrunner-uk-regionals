<ul class="mt-5">
{% for post in postslist | reverse %}
  <li>
    <a href="{{ post.url | url }}"><h3>{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h3></a>
      <p> {% for tag in post.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <small><a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a></small>
    {% endfor %}</p>
  </li>
{% endfor %}
</ul>